{% extends 'base_admin.html.twig' %}

{% block title %}Sceance index{% endblock %}

{% block body %}
    <h1>Sceance index</h1>

    <table class="table table-striped jambo_table bulk_action">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
            </tr>
        </thead>
        <tbody>
        {% for sceance in sceances %}
            <tr>
                <td>{{ sceance.id }}</td>
                <td>{{ sceance.Libelle }}</td>
                <td>
                    <a href="{{ path('sceance_show', {'id': sceance.id}) }}"><i class="fa fa-eye fa-2x" aria-hidden="true"></i></a>
                </td>
                 
                <td>
                    <a href="{{ path('sceance_edit', {'id': sceance.id}) }}"><i class="fa fa-pencil-square fa-2x" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sceance_new') }}" class="btn btn-success">Ajouter</a>
{% endblock %}
