{% extends 'base_user_enseignant.html.twig' %}

{% block title %} {% endblock %}

{% block body %}

    <section id="login-reg">
        <div class="container">
            <!-- Top content -->
            <div class="row">
                <div class="col-md-6 col-sm-12 forms-right-icons">
                    <div class="section-heading">
                        <h2><span>Formulaire d'inscription à la formation</span></h2>
                        <p class="subheading">Inscrivez-vous à partir de ce formulaire pour suivre cette formation    <i class="fa fa-hand-o-right" aria-hidden="true"></i>
.
                        </p>
                    </div>
                    
                </div>
                <div class="col-md-6 col-sm-12">
                    <div class="form-box">
                        <div class="form-top">
                            <div class="form-top-left">
                                <h3>Faites votre inscription ici</h3>
                            </div>
                        </div>
                       

                            {{ form_start(formInscriptionFormation)}}

                                <div class="input-group form-group">
                                    <span class="input-group-addon" id="basic-addon1"><i class="fa fa-user"></i></span>
                                    <input class="form-control" {{ form_widget(formInscriptionFormation.Nom,  {'attr':{'placeholder':'Nom'}})}}
                                </div>
                                
                                <div class="input-group form-group">
                                    <span class="input-group-addon" id="basic-addon1"><i class="fa fa-envelope"></i></span>
                                    <input class="form-control" {{ form_widget(formInscriptionFormation.Email,{'attr':{'placeholder':'Email'}})}}
                                </div>
                                
                                 <button type="submit" class="btn btn-primary">S'inscrire</button>
                           
                            {{ form_end(formInscriptionFormation)}}

                    </div>

                </div>


            </div>

        </div>
    </section>

{% endblock %}
 