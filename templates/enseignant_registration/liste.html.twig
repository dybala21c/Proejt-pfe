{%  extends "base_admin.html.twig" %}

{% block title %}enseignant index{% endblock %}

{% block body %}
    <h1>la liste des enseignants</h1>

    <table class="table table-striped jambo_table bulk_action">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Matricule</th>
                <th>email</th>
                <th>Adresse</th>
                <th>Telephone</th>
                <th>CV</th>
                <th>DateNaissance</th>
               

               
            </tr>
        </thead>
        <tbody>
        {% for enseignant in enseignants %} 
            <tr>
                <td>{{ enseignant.id }}</td>
                <td>{{ enseignant.Name }}</td>
                <td>{{ enseignant.Prenom }}</td>
                <td>{{ enseignant.Matricule }}</td>
                <td>{{ enseignant.email }}</td>
                <td>{{ enseignant.Adresse }}</td>
                <td>{{ enseignant.Telephone }}</td>
                <td><a href="{{asset('Cv/' ~ enseignant.cv)}}">{{enseignant.cv }}</a></td>
                <td>{{ enseignant.DateNaissance ? enseignant.DateNaissance|date('Y-m-d') : '' }}</td>
             
               
                <td>
                    <a href="{{ path('show_enseignant', {'id': enseignant.id}) }}"><i class="fa fa-eye fa-2x" aria-hidden="true"></i></a>
                </td>
                 
                <td>
                    <a href="{{ path('edit_enseignant', {'id': enseignant.id}) }}"><i class="fa fa-pencil-square fa-2x" aria-hidden="true"></i></a>
                </td>
                
             
                
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
     {{ knp_pagination_render( enseignants )}}
    <a href="{{ path('enseignant_registration') }}" class="btn btn-success">Ajouter enseignant</a>
{% endblock %}
