 <section id="contact-page">
        <div class="container">
            <div class="section-heading text-center">
                <h2>Drop your <span>Message</span></h2>
                <p class="subheading">Lorem ipsum dolor sit amet sit legimus copiosae instructior ei ut vix denique fierentis ea saperet inimicu ut qui dolor oratio mnesarchum ea utamur impetus fuisset nam nostrud euismod volumus ne mei.</p>
            </div>
            <div class="row contact-wrap">
                <div class="status alert alert-success" style="display: none"></div>
              
                {{ form_start(form) }}
                    <div class="col-sm-5 col-sm-offset-1">
                        <div class="form-group">
                            <label>Nom *</label>
                            <input  class="form-control" required="required" {{ form_widget(form.Nom) }}
                        </div>
                        <div class="form-group">
                            <label>Email *</label>
                            <input  class="form-control" required="required" {{ form_widget(form.Email) }}
                        </div>
                        <div class="form-group">
                            <label>Phone</label>
                            <input class="form-control" {{ form_widget(form.Telephone) }} 
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <div class="form-group">
                            <label>Objet *</label>
                            <input  class="form-control" required="required" {{ form_widget(form.Objet) }}
                        </div>
                        <div class="form-group">
                            <label>Message *</label>
                            <textarea  required="required" class="form-control" rows="8"  {{ form_widget(form.Message) }}</textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" name="submit" class="btn btn-default submit-button">{{ button_label|default('Contacter') }} <i class="fa fa-caret-right"></i></button>
                        </div>
                    </div>
                    {{ form_end(form) }}
            
            </div>
        </div>
    </section>