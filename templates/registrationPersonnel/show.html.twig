{% extends 'base_admin.html.twig' %}

{% block title %}Personnel{% endblock %}

{% block body %}
    <h1>Personnel</h1>

    <table class="table table-striped jambo_table bulk_action">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ personnel.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ personnel.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ personnel.Prenom }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ personnel.username }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ personnel.Adresse }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ personnel.Telephone }}</td>
            </tr>
             <tr>
                <th>DateNaissance</th>
                <td>{{ personnel.DateNaissance ? personnel.DateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
             <tr>
                <th>Bureau</th>
                <td>{{ personnel.bureau.numero }}</td>
            </tr>
             <tr>
                <th>Grade</th>
                <td>{{ personnel.grade.libelle }}</td>
            </tr>
             <tr>
                <th>Service</th>
                <td>{{ personnel.Service }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('list_personnel', {'id': personnel.id}) }}"><i class="fa fa-arrow-left fa-2x" aria-hidden="true"></i></a>
<br>
<br>
    <a href="{{ path('personnel_edit', {'id': personnel.id}) }}"><i class="fa fa-pencil-square fa-2x" aria-hidden="true"></i></a>
<br>
<br>
    {{ include('registrationPersonnel/_delete.html.twig') }}
{% endblock %}
