<form method="post" action="{{ path('delete_personnel', {'id': personnel.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ personnel.id) }}">
    <button ><i class="fa fa-trash fa-2x" aria-hidden="true"></i></button>
</form>